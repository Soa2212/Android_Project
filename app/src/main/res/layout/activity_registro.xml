<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrnd">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Login"
    android:background="@drawable/items_detalle_habitacion7"
    android:padding="30dp">
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/myImageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/imgloguser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp" />
    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="330dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="130dp"
        android:background="@drawable/items_detalle_habitacion8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="430dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fontios"
            android:text="Registrarse"
            android:textSize="40sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
        />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_marginBottom="15dp"
            android:layout_height="50dp">
            <TextView
                android:text="👤"
                android:textSize="20dp"
                android:gravity="center"

                android:layout_width="50dp"
                android:background="#03264d"
                android:layout_height="match_parent"/>
            <EditText
                android:paddingStart="15dp"
                android:background="#3d5678"
                android:fontFamily="@font/fontios"
                android:id="@+id/etNombre"
                android:textColor="#AAFFFFFF"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nombre"
                android:textColorHint="#AAFFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="300dp"
            android:layout_height="50dp">
            <TextView
                android:text="✉️"
                android:textSize="20dp"
                android:gravity="center"

                android:layout_width="50dp"
                android:background="#03264d"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3d5678"
                android:fontFamily="@font/fontios"
                android:hint="Correo"
                android:paddingStart="15dp"
                android:textColor="#AAFFFFFF"
                android:textColorHint="#AAFFFFFF"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="300dp"
            android:layout_height="50dp">
            <TextView
                android:text="🔒"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:background="#03264d"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etPasssword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3d5678"
                android:fontFamily="@font/fontios"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColor="#AAFFFFFF"
                android:textColorHint="#AAFFFFFF"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp">
            <TextView
                android:text="🔐"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="50dp"
                android:background="#03264d"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3d5678"
                android:fontFamily="@font/fontios"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColor="#AAFFFFFF"
                android:textColorHint="#AAFFFFFF"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly1"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:gravity="center"
            android:textSize="17dp"
            android:id="@+id/btnRegister"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="Registrarse"
            android:background="@drawable/items_detalle_habitacion9"
          />
    </LinearLayout>

    <TextView
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text=""
        android:fontFamily="@font/fontios"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:id="@+id/tvError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/fontios"
        android:text="¿Tienes una cuenta? Inicia sesión"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/items_detalle_habitacion11"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="Iniciar sesión"
        android:id="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRegister"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>